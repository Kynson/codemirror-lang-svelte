{
  "name": "codemirror-lang-svelte",
  "description": "Svelte language support for CodeMirror6",
  "version": "6.0.0",
  "author": {
    "name": "Brian Pool",
    "email": "brian@repl.it"
  },
  "contributors": [
    {
      "name": "Kynson Szetau"
    }
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "dev-vite": "vite ./dev",
    "dev-cm": "node ./dev/watch.cjs src/index.ts",
    "build": "cm-buildhelper src/index.ts",
    "test": "cm-runtests",
    "publish": "npm run build && npm publish",
    "format": "prettier src/* --write --ignore-unknown",
    "generate": "lezer-generator"
  },
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.0.0",
    "@codemirror/lang-css": "^6.0.1",
    "@codemirror/lang-html": "^6.2.0",
    "@codemirror/lang-javascript": "^6.1.1",
    "@codemirror/language": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@lezer/common": "^1.0.0",
    "@lezer/highlight": "^1.0.0",
    "@lezer/javascript": "^1.2.0",
    "@lezer/lr": "^1.0.0"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.0.0",
    "@codemirror/buildhelper": "^1.0.2",
    "@codemirror/lang-css": "^6.0.1",
    "@codemirror/lang-html": "^6.2.0",
    "@codemirror/lang-javascript": "^6.1.1",
    "@codemirror/language": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/theme-one-dark": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@lezer/common": "^1.0.0",
    "@lezer/generator": "^1.0.0",
    "@lezer/highlight": "^1.0.0",
    "@lezer/javascript": "^1.2.0",
    "@lezer/lr": "^1.0.0",
    "@types/node": "^24.3.0",
    "codemirror": "^6.0.0",
    "vite": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kynson/codemirror-lang-svelte.git"
  }
}
